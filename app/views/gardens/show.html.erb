<h1><%=h @garden.name %></h1>

<p>
  <b>Location:</b>
  <%=h @garden.city %>,
  <%=h @garden.state %>
</p>

<p>
  <b>Public?:</b>
  <%=h @garden.is_public %>
</p>

<!--
<p>
  <b>Info:</b>
  <%=h @garden.info %>
</p>
-->

<b>Photos:</b>

<% @photos.each_with_index do |photo, i| %>
  <p>
    <%=h photo.title %><br />
    <%= image_tag "#{@aws}#{@hash[i]}.jpg" %>
  </p>
<% end %><br />

<h2>Plots</h2>

<% @plots.each do |plot| %>
  <h3><%=h plot.name %></h3>
  <% plot.plants.each do |plant| %>
    <b>&nbsp;&nbsp;&nbsp;&nbsp;<%=h plant.name %></b><br />
    <% plant.journals.each do |journal| %>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<em><%=h journal.created_at.getlocal.strftime("%b %d, %Y %I:%M %p") %></em> <%=h journal.body %>
	  <br />
    <% end %>
  <% end %>
<% end %>

<br />
<%= link_to 'Edit', edit_garden_path(@garden) %> |
