<h1>Listing plants</h1>

<table>
  <tr>
    <th>Plot</th>
    <th>Name</th>
    <th>Species</th>
    <th>Online entry</th>
    <th>Info</th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%=h plant.plot_id %></td>
    <td><%=h plant.name %></td>
    <td><%=h plant.species %></td>
    <td><%=h plant.online_entry %></td>
    <td><%=h plant.info %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New plant', new_plant_path %>